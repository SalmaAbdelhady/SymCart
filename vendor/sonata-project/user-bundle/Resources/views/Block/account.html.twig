{% extends sonata_block.templates.block_base %}

{% block block %}

    {% if user %}
        <nav >
            <ul class="nav nav-pills">

                <li>
                    <a href="{{ path('cart_index') }}">
                        <span class="glyphicon glyphicon-shopping-cart"></span>
                        My Cart</a> 
                </li>
                <li>
                    <a href="{{ path('order_list') }}">
                        <span class="glyphicon glyphicon-credit-card"></span>
                        Track Orders</a> 
                </li>
                <li>
                    <a href="{{ path('wishlist_index') }}">
                        <span class="glyphicon glyphicon-star"></span>
                        My Wishlist</a> 
                </li>
                
                <li>
                    <a href="{{ path('sonata_user_profile_show') }}">
                        <span class="glyphicon glyphicon-user"></span>
                        {{ user.username }}</a> 
                </li>

                <li>  
                    <a href="{{ path('fos_user_security_logout') }}">
                        <span class="glyphicon glyphicon-log-out"></span>
                        {{ 'link_logout' | trans({}, "SonataUserBundle") }}</a>
                </li>

            </ul>
        </nav>
    {% else %}
        <nav >
            <ul class="nav nav-pills">

                <li>
                    <a href="{{ path('fos_user_security_login') }}">{{ 'link_login'|trans({}, 'SonataUserBundle') }} 
                    </a> </li>
                   <li>
                    <a href="{{ path('fos_user_registration_register') }}"> 
                        {{ 'link_register'|trans({}, 'SonataUserBundle') }}</a>
                </li>
            </ul>
        </nav>
    {% endif %}

{% endblock %}
