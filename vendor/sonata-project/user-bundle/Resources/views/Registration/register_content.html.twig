{% extends '::base.html.twig' %}
{% block body %}

    <div class="panel panel-success">
        <div class="panel-heading">
            <h2 class="panel-title">{{ 'title_user_registration'|trans({}, 'SonataUserBundle') }}</h2>
        </div>
        <div class="panel-body">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">
                <div class="col-md-12">
                    <div class="form-group ">
                        {{ form_row(form.username, {'label' : "User name", 'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.email, {'label' : "Email", 'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.plainPassword.first, {'label' : "Password", 'attr': {'class': 'form-control'}}) }}
                        {{ form_row(form.plainPassword.second, {'label' : "Confirm Password", 'attr': {'class': 'form-control'}}) }}
                        <div display="hidden">{{ form_rest(form) }}</div>
                    </div>
                    <div class="form-actions">
                        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-success pull-right" />
                    </div>
                </div>


            </form>
        </div>
    </div>
{%endblock%}